<body onload="cleanStorage()">
	
	{{> menu}}
	<section class="row">
		<article class="container" style="margin-top: 30px">
			<div class="pull-right">
				<input type="checkbox" id="selectAll">  Select all
			</div>
			<table class="table table-hover">
				<thead>
					<th>Email Address</th>
					<th>Username</th>
					<th>Convert?</th>
				</thead>
				<tbody>
					{{#each users}}
					<tr>
						<td>{{emailAddress}}</td>
						<td>{{username}}</td>
						<td><input type="checkbox" name='userSelect' value="{{emailAddress}} * {{username}}" data-email={{emailAddress}} data-username={{username}}></td>
					</tr>
					{{/each}}
				</tbody>
			</table>
